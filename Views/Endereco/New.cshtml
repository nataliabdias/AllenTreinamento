{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Sample.Models.Endereco

<div class="page-header">
    <h2>Nova Pessoa</h2>
</div>

@using (Html.BeginForm("New", "Endereco", new { idPessoa = ViewBag.IdPessoa }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Logradouro, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Logradouro, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Logradouro)
        </div>
    </div>
       
    <div class="form-group">
        @Html.LabelFor(x => x.Bairro, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Bairro)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.CEP, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CEP, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CEP)
        </div>
    </div>
    
     <div class="form-group">
        @Html.LabelFor(x => x.Cidade, new { @class = "col-sm-2 control-label" })
         <div class="col-sm-10">       
            @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Cidade)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Estado, new { @class = "col-sm-2 control-label" })
         <div class="col-sm-10">       
            @Html.TextBoxFor(x => x.Estado, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Estado)
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Pais, new { @class = "col-sm-2 control-label" })
         <div class="col-sm-10">       
            @Html.TextBoxFor(x => x.Pais, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Pais)
        </div>
    </div>
    <div class="form-group">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default btn-success">Salvar Endereco</button>
            </div>
        </div>
    </div>
}
